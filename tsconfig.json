{
	"compilerOptions": {
		"target": "es2022",
		"module": "commonjs",
		"rootDir": "src",
		"outDir": "build",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"incremental": false,
		"sourceMap": false,
		"allowJs": false,
		"skipLibCheck": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"dist",
		"**/*.spec.ts",
		"build.js"
	]
}